@page
@using Domain.DTOs
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Our Services </h1> 
<p> Please select a service to see available slots </p>
<table class="table">
    <thead>
        <tr>
            <th>
                Service
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (SalonServiceResponse? item in Model.Services) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Booking/Index" asp-route-id="@item.Id" style="text-decoration: none;">Select</a> 
            </td>
        </tr>
}
    </tbody>
</table>
